generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Defines the possible statuses for a patient's treatment
enum PatientStatus {
  ACTIVE
  PAUSED
  FINISHED
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String    // This will store the HASHED password
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // The relationship: One User has many Patients
  patients  Patient[]
}

model Patient {
  id                 String        @id @default(cuid())
  rut                String        @unique
  fullName           String
  phone              String        @unique
  email              String        @unique
  treatmentStartDate DateTime
  changeFrequency    Int
  status             PatientStatus @default(ACTIVE) // The new status field
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  userId             String   // The foreign key
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  messageLogs        MessageLog[]
}

model MessageLog {
  id             String   @id @default(cuid())
  sentAt         DateTime @default(now())
  status         String
  messageContent String
  
  patientId      String
  patient        Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
}