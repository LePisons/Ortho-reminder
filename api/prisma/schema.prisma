generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PatientStatus {
  ACTIVE
  PAUSED
  FINISHED
}

model Patient {
  id                 String        @id @default(cuid())
  rut                String        @unique
  fullName           String
  phone              String        @unique
  email              String        @unique
  treatmentStartDate DateTime
  changeFrequency    Int
  status             PatientStatus @default(ACTIVE)
  avatarUrl          String?
  diagnosis          String?
  treatmentPlan      String?
  observations       String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  userId             String
  user               User          @relation(fields: [userId], references: [id])
  messageLogs        MessageLog[]
  clinicalRecords    ClinicalRecord[]
  patientImages      PatientImage[]
  notes              Note[]
}

model ClinicalRecord {
  id             String   @id @default(cuid())
  date           DateTime @default(now())
  diagnosis      String?
  treatmentPlan  String?
  observations   String?
  
  patientId      String
  patient        Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

enum ImageType {
  PHOTO
  XRAY
}

model PatientImage {
  id          String    @id @default(cuid())
  url         String
  type        ImageType
  date        DateTime  @default(now())
  description String?
  category    String?

  patientId   String
  patient     Patient   @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model Note {
  id        String   @id @default(cuid())
  content   String
  color     String?  @default("yellow") // yellow, blue, pink, green
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patientId String
  patient   Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model MessageLog {
  id             String   @id @default(cuid())
  sentAt         DateTime @default(now())
  status         String
  messageContent String
  
  patientId      String
  patient        Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  patients  Patient[]

}